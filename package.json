{
  "name": "ict-4505-website-design-management",
  "version": "0.0.1",
  "description": "Course work for ICT 4505 Website Design and Management, a class I took as part of my masters degree program.",
  "main": "./build/server/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "django": "./backend/manage.py runserver",
    "watch:src": "babel ./src -d build --watch",
    "server:dev": "nodemon --exec babel-node ./build/server/index.js",
    "watch:webpack": "webpack --config ./webpack.config.babel.js --color --progress --watch",
    "start": "babel-node --optimize_for_size --max_old_space_size=920 --gc_interval=100 --expose-gc ./build/server/index.js",
    "watch:sass": "node-sass src/client/sass/stylesheet.sass --watch --recursive --precision=8 --include-path=node_modules/ -o public/css/",
    "dev": "source .env && parallelshell 'npm run watch:sass' 'npm run watch:webpack' 'npm run watch:src' 'npm run server:dev' 'npm run django'",
    "build": "export NODE_ENV=production && node-sass src/client/sass/stylesheet.sass -r --precision=8 --include-path=node_modules/ -o public/css/ && postcss public/css/stylesheet.css --verbose --env production --replace && babel ./src -d build && webpack --config ./webpack.config.babel.js"
  },
  "engines": {
    "node": "8.10.0",
    "npm": "5.8.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE 10",
    "IE 9"
  ],
  "cssnano": {
    "preset": [
      "default",
      {
        "discardComments": {
          "removeAll": true
        },
        "autoprefixer": false
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kylecarter/ict-4505-website-design-management.git"
  },
  "keywords": [
    "javascript",
    "html",
    "css",
    "python",
    "react",
    "react-router",
    "sass",
    "react-dom",
    "isomorphic javascript",
    "headless application architecture",
    "django"
  ],
  "author": "Kyle A. Carter",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kylecarter/ict-4505-website-design-management/issues"
  },
  "homepage": "https://github.com/kylecarter/ict-4505-website-design-management#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "client-sessions": "^0.8.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "csurf": "^1.9.0",
    "express": "^4.16.3",
    "jquery": "^3.3.1",
    "jquery-ui": "^1.12.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "animate-sass": "^0.8.2",
    "autoprefixer": "^8.2.0",
    "bourbon": "^5.0.0",
    "bourbon-bitters": "^1.2.1",
    "breakpoint-sass": "^2.7.1",
    "css-reset-and-normalize-sass": "^0.1.2",
    "cssnano": "^3.10.0",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.2",
    "parallelshell": "^3.0.2",
    "postcss": "^6.0.21",
    "postcss-cli": "^5.0.0",
    "susy": "^3.0.3",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-middleware": "^3.0.1",
    "webpack-hot-middleware": "^2.21.2"
  }
}
